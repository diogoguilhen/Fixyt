<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixyt.fixyt.Main"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back_tela" />

    <Button
        android:id="@+id/botaoLogout"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Logout" />

    <Button
        android:id="@+id/botaoPerfil"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/botaoLogout"
        android:layout_alignBottom="@+id/botaoLogout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Mudar Senha" />

    <Button
        android:id="@+id/botaoCarro"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Cadastrar Veiculo"
        android:layout_below="@+id/botaoLogout"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botaoAuxilio"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:text="Pedir Auxilio" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
