<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixyt.fixyt.Main"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/principal_back"
        android:id="@+id/imageView8"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Log Out"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/botaoLogout"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <Button
        android:text="Perfil"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/botaoPerfil"
        android:layout_alignBaseline="@+id/botaoLogout"
        android:layout_alignBottom="@+id/botaoLogout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        android:text="Trocar Carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/BotaoCarro"
        android:layout_below="@+id/botaoLogout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Carro Atual: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarroAtual"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/BotaoCarro"
        android:layout_toLeftOf="@+id/BotaoCarro"
        android:layout_toStartOf="@+id/BotaoCarro"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="@Carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QCarro"
        android:layout_alignBaseline="@+id/CarroAtual"
        android:layout_alignBottom="@+id/CarroAtual"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_bright" />


</RelativeLayout>
