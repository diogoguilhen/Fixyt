<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixyt.fixyt.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_tela"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView3"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/campoNome"
                android:hint="Nome"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/campoSobrenome"
                android:hint="Sobrenome"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/campoDdi"
                android:hint="+55"
                android:inputType="number"
                android:maxLength="3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/campoTelefone"
                android:hint="(11) 92345-6789"
                android:maxLength="11"
                android:inputType="number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <EditText
            android:layout_margin="15dp"
            android:id="@+id/campoEmail"
            android:hint="Digite seu E-mail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_margin="15dp"
            android:id="@+id/campoSenha"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_margin="15dp"
            android:id="@+id/confirmaSenha"
            android:hint="Confirmação da Senha"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColor="@android:color/white" />

        <Button
            android:layout_margin="15dp"
            android:id="@+id/botaoProximo1"
            android:text="Próximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icone_fixyt"
        android:layout_marginTop="27dp"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp" />

</RelativeLayout>
